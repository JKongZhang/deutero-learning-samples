<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xinfago.mybatis.mapper.ArticleMapper">
    <select id="selectArticle" resultType="com.xinfago.mybatis.pojo.Article">
        select *
        from t_article
        where id = #{id}
    </select>
</mapper>